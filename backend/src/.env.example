# Database
DATABASE_URL="postgresql://user:password@localhost:5432/az_seguros?schema=public"

# Redis Configuration
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Encryption (generate a secure key using crypto.randomBytes(32).toString('hex'))
ENCRYPTION_KEY="your-32-byte-encryption-key-here"

# Security Timeouts
TOKEN_RENEWAL_THRESHOLD=300 # 5 minutes in seconds
CACHE_TTL=900 # 15 minutes in seconds
REQUEST_TIMEOUT=10000 # 10 seconds in milliseconds

# Insurance API Base URLs
HERO_API_URL="https://api.hero-seguros.com.br"
TRAVEL_API_URL="https://api.travel-insurance.com"

# Metrics and Monitoring
ENABLE_METRICS=true
METRICS_PREFIX="insurance_module"

# Rate Limiting
RATE_LIMIT_TTL=60 # 1 minute
RATE_LIMIT_MAX=100 # requests per minute

# Error Handling
MAX_RETRIES=3
RETRY_DELAY_BASE=1000 # Base delay in milliseconds for exponential backoff